@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEdit";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme Sayfası</h4>
                <br />

                <div class="form-group">
                    <H5>Yazar Görsel</H5>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <img src="~/writer/assets/images/faces/face1.jpg" />
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                        </span>
                    </div>
                </div>
                
                @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
            <form class="forms-sample">

               

                <div class="form-group">
                    <label for="exampleInputName1"> İsim Soyisim</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1"> Şehir / İlçe </label>
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1"> Telefon </label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Parola</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Yeni sifrenizi girin" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Parolayı Doğrula</label>
                    <input type="password" name="PasswordAgain" class="form-control" id="password2" placeholder="Yeni Şifrenizi Tekrar Giriniz" required="" />
                </div>



                <div class="form-group">
                    <label for="exampleTextarea1"> Hakkında </label>
                    @Html.TextAreaFor(x => x.About, 10, 3, new { @class = "form-control" })
                </div>




                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
            </div>
        </div>
    </div>
}